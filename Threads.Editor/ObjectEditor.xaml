<UserControl x:Class="Threads.Editor.ObjectEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Threads.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="320"
             MinWidth="320">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Silver"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Margin" Value="4.0 4.0 1.0 4.0"/>
        </Style>

        <Style x:Key="AddDelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Width" Value="20" />
        </Style>

        <Style x:Key="HeaderStyle" TargetType="Control">
            <Setter Property="BorderBrush" Value="Silver" />
            <Setter Property="BorderThickness" Value="0 0 0 2" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Object Editor" Style="{StaticResource HeaderStyle}" />
    </Grid>
</UserControl>
