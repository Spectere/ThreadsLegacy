<Window x:Class="Threads.Player.StoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Threads.Player"
        mc:Ignorable="d"
        Title="StoryWindow" Height="640" Width="600"
        KeyDown="StoryWindow_OnKeyDown"
        MouseMove="StoryWindow_OnMouseMove">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="stack" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <Menu x:Name="menu" Height="Auto" VerticalAlignment="Top" Visibility="Hidden">
            <MenuItem Header="Load" Click="Load_OnClick" FontSize="18" BorderBrush="Gray" Background="Silver" Margin="4.0"/>
            <MenuItem Header="Restart" Click="Restart_OnClick" FontSize="18" BorderBrush="Gray" Background="Silver" Margin="4.0"/>
        </Menu>
    </Grid>
</Window>
